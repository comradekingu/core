{
  "name": "~stats-updater",
  "version": "1.0.0",
  "description": "Daily stats calculation for DucksManager",
  "main": "index.ts",
  "scripts": {
    "build": "bun build --target bun --sourcemap index.ts --outfile bundle.mjs",
    "prod:deploy": "cd $REMOTE_ROOT/apps/stats-updater && docker compose pull && docker compose up -d --force-recreate",
    "prod:build-docker": "pnpm -F '~ci' prod:build-docker -f apps/stats-updater/Dockerfile -t ghcr.io/bperel/stats-updater",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @apps/stats-updater/.env.prod.local:apps/stats-updater/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files apps/stats-updater/docker-compose.yml:@apps/stats-updater/docker-compose.yml"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mariadb": "^3.3.1",
    "~prisma-schemas": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.5.4"
  }
}