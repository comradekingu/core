{
  "name": "ducksmanager",
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "type": "module",
  "dependencies": {
    "husky": "^9.0.11"
  },
  "devDependencies": {
    "turbo": "^1.13.3"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "pnpm -r --parallel -F '!~duckguessr' run lint --fix",
    "build:web": "NODE_ENV=production turbo build -F '~web...'",
    "build:api": "NODE_ENV=production turbo build -F '~api...'",
    "dev:edgecreator": "turbo dev -F '~edgecreator-api...' -F '~edgecreator' -F '~web'"
  }
}